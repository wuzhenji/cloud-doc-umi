{
  "name": "my-buildtest-app",
  "main": "main.js",
  "version": "0.1.0",
  "private": true,
  "description": "Online Markdown Editor Using Qiniu cloud service",
  "author": {
    "name": "wuzhenji",
    "email": "15195035689@163.com"
  },
  "repository": "https://github.com/wuzhenji",
  "scripts": {
    "dev": "concurrently \"wait-on http://localhost:8000 && electron .\" \"cross-env BROWSER=none npm start\"",
    "ele": "electron .",
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "release": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "homepage": "./",
  "build": {
    "appId": "cloudDoc",
    "productName": "云文档",
    "copyright": "Copyright @ 2022 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "settings/**/*",
      "package.json",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extends": null,
    "win": {
      "target": ["msi", "nsis"],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "wuzhenji"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "17.x",
    "react-dom": "17.x"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.20",
    "easymde": "^2.15.0",
    "react-simplemde-editor": "^5.0.2",
    "umi": "^3.5.20",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "wait-on": "^6.0.0"
  }
}
